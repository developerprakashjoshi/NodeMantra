  name: string;
  description: string;
  status: <%= className %>Status;
  createdAt: Date;
  updatedAt: Date;
  deletedAt?: Date | null;
}

const <%= className %>Schema: Schema = new Schema({
  name: { type: String, required: true },
  description: { type: String, required: true },
  status: { type: Number, enum: [0, 1], default: 1 },
